<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Register">

    <TextView
        android:id="@+id/tv_signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="70dp"
        android:fontFamily="@font/nunito_extrabold"
        android:text="Kayıt Ol"
        android:textColor=" #2B2F31"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/im_back"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:id="@+id/et_name"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/btn_bg"
        android:elevation="2dp"
        android:ems="10"
        android:fontFamily="@font/nunito"
        android:hint="Ad Soyad"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:textColor="@color/yazı"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_signup" />

    <EditText
        android:id="@+id/et_regemail"
        android:layout_width="0dp"
        android:elevation="2dp"
        android:layout_height="60dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/btn_bg"
        android:ems="10"
        android:fontFamily="@font/nunito"
        android:hint="E-Mail"
        android:inputType="textEmailAddress"
        android:padding="10dp"
        android:textColor="@color/yazı"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_name" />

    <EditText
        android:id="@+id/et_regpassword"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:elevation="2dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/btn_bg"
        android:ems="10"
        android:fontFamily="@font/nunito"
        android:hint="Sifre"
        android:inputType="textPassword"
        android:padding="10dp"
        android:textColor="@color/yazı"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_regemail" />

    <Button
        android:id="@+id/bt_registerfire"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="352dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:background="@drawable/green_button"
        android:text="Kayit Ol"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        app:iconTint="#813131"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup2" />

    <RadioGroup
        android:id="@+id/radioGroup2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextPhone">

        <RadioButton
            android:id="@+id/radio_vasi"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/kenar_yesil"
            android:buttonTint="@color/yazı"
            android:text="Vasi Kaydı"
            android:checked="true"
            android:textColor="@color/yazı" />

        <RadioButton
            android:id="@+id/radio_hasta"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/kenar_yesil"
            android:buttonTint="@color/yazı"
            android:text="Hasta Kaydı"
            android:textColor="@color/yazı" />
    </RadioGroup>

    <EditText
        android:id="@+id/et_Uid"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/btn_bg"
        android:ems="10"
        android:fontFamily="@font/nunito"
        android:hint="Uygulama Kodu"
        android:elevation="2dp"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:textColor="@color/yazı"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_regpassword" />

    <ImageView
        android:id="@+id/im_back"
        android:layout_width="8dp"
        android:layout_height="16dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="80dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/back" />

    <EditText
        android:id="@+id/editTextPhone"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/btn_bg"
        android:ems="10"
        android:hint="Telefon"
        android:inputType="phone"
        android:padding="10dp"
        android:elevation="2dp"
        android:textColor="@color/yazı"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/et_Uid"
        app:layout_constraintTop_toBottomOf="@+id/et_Uid" />

    <TextView
        android:id="@+id/tv_already"
        android:layout_width="174sp"
        android:layout_height="wrap_content"
        android:layout_marginStart="90dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="140dp"
        android:fontFamily="@font/nunito"
        android:text="Zaten bir hesabın var mı?"
        android:textColor="@color/gri"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bt_registerfire" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:fontFamily="@font/nunito"
        android:text="Giris Yap"
        android:textColor="@color/yesil"
        app:layout_constraintStart_toEndOf="@+id/tv_already"
        app:layout_constraintTop_toTopOf="@+id/tv_already" />


</androidx.constraintlayout.widget.ConstraintLayout>