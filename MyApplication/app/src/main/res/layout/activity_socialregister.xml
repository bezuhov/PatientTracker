<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".Socialregister">

    <TextView
        android:id="@+id/tv_tittlesocial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="150dp"
        android:fontFamily="@font/nunito_extrabold"
        android:text="Son bir adım"
        android:textColor="@color/yazi_baslik"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_infosocial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/kayitsonadim"
        android:textColor="@color/yazı"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="@+id/tv_tittlesocial"
        app:layout_constraintTop_toBottomOf="@+id/tv_tittlesocial" />

    <EditText
        android:id="@+id/et_Uidsocial"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/btn_bg"
        android:ems="10"
        android:elevation="3dp"
        android:padding="4dp"
        android:fontFamily="@font/nunito"
        android:hint="@string/hintsocial"
        android:inputType="textPersonName"
        android:textColor="@color/yazı"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tv_infosocial"
        app:layout_constraintTop_toBottomOf="@+id/tv_infosocial" />

    <EditText
        android:id="@+id/et_phonesocial"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/btn_bg"
        android:elevation="3dp"
        android:ems="10"
        android:fontFamily="@font/nunito"
        android:hint="Telefon numaranız"
        android:inputType="phone"
        android:padding="4dp"
        android:textColor="@color/yazı"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/et_Uidsocial"
        app:layout_constraintTop_toBottomOf="@+id/et_Uidsocial" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="@+id/et_phonesocial"
        app:layout_constraintTop_toBottomOf="@+id/et_phonesocial">

        <RadioButton
            android:id="@+id/rb_rsocial"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:background="@drawable/kenar_yesil"
            android:buttonTint="@color/yazı"
            android:text="Hasta Kaydı"
            android:textColor="@color/yazı" />

        <RadioButton
            android:id="@+id/rb_rsocialv"
            android:checked="true"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:background="@drawable/kenar_yesil"
            android:buttonTint="@color/yazı"
            android:text="Vasi Kaydı"
            android:layout_marginLeft="10dp"
            android:textColor="@color/yazı" />
    </RadioGroup>

    <Button
        android:id="@+id/bt_rsocial"
        android:layout_width="352dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@drawable/green_button"
        android:text="Kayıt ol"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup" />

</androidx.constraintlayout.widget.ConstraintLayout>